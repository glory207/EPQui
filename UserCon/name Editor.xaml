<UserControl x:Class="EPQui.UserCon.name_Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPQui.UserCon"
             mc:Ignorable="d" 
             d:DesignHeight="20.824" d:DesignWidth="66.533">
    <Grid>

        <Border CornerRadius="5" Background="Gray" >
            <TextBox KeyDown="txtBlock_KeyDown" Name="txtBlock" Background="Transparent" BorderBrush="Transparent" Text="{Binding BoundVal}" VerticalAlignment="Center" HorizontalAlignment="Left" />
        </Border>
    </Grid>
</UserControl>
