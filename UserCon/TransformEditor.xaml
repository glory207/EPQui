<UserControl x:Class="EPQui.UserCon.TransformEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPQui.UserCon"
             mc:Ignorable="d" 
             FontSize="15" d:DesignHeight="184" d:DesignWidth="133.333"  >
    <Border Background="LightGray" CornerRadius="5" Padding="2 3 5 5"   Name="border" Margin =" 0 1">
        <Grid Background="Transparent">

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="2" Background="Gray" MouseDown="Border_MouseDown">
                <TextBlock Padding="5" Text="{ Binding BoundName }" VerticalAlignment="Center" HorizontalAlignment="Left" />
            </Border>
            <StackPanel Margin="0 5 0 0" Grid.Row="1">
                <local:ValueSlider Margin="1" x:Name="slider1"/>
                <local:ValueSlider Margin="1" x:Name="slider2"/>
                <local:ValueSlider Margin="1" x:Name="slider3"/>

            </StackPanel>
        </Grid>

    </Border>
</UserControl>
